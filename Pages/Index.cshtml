@page
@model LabAccessSystem.Pages.AccessLogs.IndexModel
@{
    ViewData["Title"] = "Access Logs";
}

<h1>Access Logs</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Logs[0].Timestamp)</th>
            <th>@Html.DisplayNameFor(m => m.Logs[0].UserName)</th>
            <th>@Html.DisplayNameFor(m => m.Logs[0].Action)</th>
            <th>@Html.DisplayNameFor(m => m.Logs[0].EntityName)</th>
            <th>@Html.DisplayNameFor(m => m.Logs[0].EntityId)</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var log in Model.Logs)
    {
        <tr>
            <td>@log.Timestamp.ToLocalTime().ToString("g")</td>
            <td>@log.UserName</td>
            <td>@log.Action</td>
            <td>@log.EntityName</td>
            <td>@log.EntityId</td>
        </tr>
    }
    </tbody>
</table>
